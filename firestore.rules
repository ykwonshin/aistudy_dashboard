rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // dashboard/commentStats 문서에 대한 공개 읽기 권한
    match /dashboard/commentStats {
      allow read: if true;
    }
    
    // 다른 모든 문서는 기본적으로 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
